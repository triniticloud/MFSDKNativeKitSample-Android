<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.Rounded" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@drawable/text_color_button_selector</item>
        <item name="android:background">@drawable/round_button_selector_new</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:paddingLeft">@dimen/left_padding_text_rounded_button</item>
        <item name="android:paddingRight">@dimen/right_padding_text_rounded_button</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Widget.App.Button.Rounded.Selector" parent="Widget.App.Button.Rounded">
        <item name="android:background">@drawable/round_button_selector_new</item>
        <item name="android:textColor">@drawable/text_color_button_selector</item>
    </style>

    <style name="Text">

    </style>

    <style name="Text.Primary" parent="Text">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.20</item>
    </style>

    <style name="Text.Secondary" parent="Text">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.20</item>
    </style>

    <style name="Text.Secondary.Black" parent="Text.Secondary">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>
</resources>