<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_main_container_templateview_text_in"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_incoming_bubble"
    android:layout_marginRight="@dimen/right_margin_in_bubble_text"
    android:layout_marginEnd="@dimen/right_margin_in_bubble_text"
    android:paddingBottom="@dimen/bottom_padding_in_bubble_text"
    android:paddingEnd="@dimen/right_padding_in_bubble_text"
    android:paddingLeft="@dimen/left_padding_in_bubble_text"
    android:paddingRight="@dimen/right_padding_in_bubble_text"
    android:paddingStart="@dimen/left_padding_in_bubble_text"
    android:paddingTop="@dimen/top_padding_in_bubble_text"
    tools:showIn="@layout/templateview_text_in_layout">

    <ai.active.uikit.view.SansFranciscoTextView
        android:id="@+id/tv_msg_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        style="@style/Text.Secondary.Black"/>

    <!-- msg status detail-->
    <include
        layout="@layout/time_tick_bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:gravity="bottom" />

</FrameLayout>